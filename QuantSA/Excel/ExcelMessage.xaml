<Window x:Class="QuantSA.Excel.ExcelMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             ResizeMode="CanResize" Title="QuantSA: Error" ShowInTaskbar="True" SizeToContent="WidthAndHeight" Topmost="True">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="0,10,0,10" Name="spOuter" VerticalAlignment="Top" Orientation="Vertical">
            <Label Height="Auto" Name="lblMessage" MinWidth="300" Padding="5" Content="Empty for now"  Margin="5,10,5,0" />
            <Label Height="Auto" Name="lblStackTrace" MinWidth="300" Padding="5" Content="Empty for now" Margin="5,0,5,10"/>

            <StackPanel HorizontalAlignment="Center" Margin="0" Name="spButtons" VerticalAlignment="Top" Orientation="Horizontal">
                <Button Content="OK" Height="23" HorizontalAlignment="Center" Margin="5" Name="btnOK" VerticalAlignment="Top" Width="50" Click="btnOK_Click" />
                <Button Content="Cancel" Height="23" HorizontalAlignment="Center" Margin="5" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
